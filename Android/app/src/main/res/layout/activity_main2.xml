<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <GridLayout
        android:id="@+id/grid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/board"
        android:columnCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.946"
        android:rowCount="3">


        <ImageView
            android:id="@+id/box0"
            android:layout_width="123dp"
            android:layout_height="114dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="0"
            app:layout_column="0"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/box3"
            android:layout_width="128dp"
            android:layout_height="115dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="1"
            app:layout_column="1"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/box2"
            android:layout_width="126dp"
            android:layout_height="114dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="2"
            app:layout_column="2"
            app:layout_row="0" />

        <ImageView
            android:id="@+id/box1"
            android:layout_width="125dp"
            android:layout_height="113dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="3"
            app:layout_column="0"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/box4"
            android:layout_width="127dp"
            android:layout_height="113dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="4"
            app:layout_column="1"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/box5"
            android:layout_width="125dp"
            android:layout_height="114dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="5"
            app:layout_column="2"
            app:layout_row="1" />

        <ImageView
            android:id="@+id/box6"
            android:layout_width="125dp"
            android:layout_height="114dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="6"
            app:layout_column="0"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/box7"
            android:layout_width="128dp"
            android:layout_height="114dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="7"
            app:layout_column="1"
            app:layout_row="2" />

        <ImageView
            android:id="@+id/box8"
            android:layout_width="123dp"
            android:layout_height="117dp"
            android:onClick="ingame"
            android:padding="20dp"
            android:tag="8"
            app:layout_column="2"
            app:layout_row="2" />
    </GridLayout>

    <LinearLayout
        android:id="@+id/playagain"
        android:layout_width="191dp"
        android:layout_height="135dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center_horizontal|center|clip_horizontal"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/winnermessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:text="TextView"
            android:textAlignment="center"
            android:textSize="30sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="reset"
            android:text="PLAY AGAIN" />

    </LinearLayout>

    <TextView
        android:id="@+id/player1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="PLAYER 1 : 0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/grid"
        app:layout_constraintEnd_toEndOf="@+id/playagain"
        app:layout_constraintStart_toStartOf="@+id/playagain" />

    <TextView
        android:id="@+id/player2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:text="PLAYER 2 : 0"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/grid"
        app:layout_constraintEnd_toEndOf="@+id/playagain"
        app:layout_constraintStart_toStartOf="@+id/playagain"
        app:layout_constraintTop_toTopOf="@+id/playagain"
        app:layout_constraintVertical_bias="0.954" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="SCOREBOARD"
        android:textAlignment="center"
        android:textSize="36sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="@+id/player1"
        app:layout_constraintStart_toStartOf="@+id/player1"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>